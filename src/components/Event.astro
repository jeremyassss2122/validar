---
export interface Props {
  title: string;
  iconLink: string;
  iconAlt: string;
  time: string;
  description: string;
  address: string;
  addressLink: string;
  addressRef: string;
  class?: string;
}

const { 
    title,
    iconLink,
    iconAlt,
    time,
    description,
    address,
    addressLink,
    addressRef,
    class: additionalClasses
} = Astro.props;
---

<div class={`flex flex-col items-center text-center space-x-4 py-3 max-w-80 ${additionalClasses}`}>
    <h3 class="font-bold text-4xl md:text-5xl">{title}</h3>
    <img class="w-12 h-12 my-4" src={iconLink} alt={iconAlt} />
    <p class="md:text-2xl">{time}</p>
    <p class="md:text-2xl">{description}</p>
    <p class="md:text-2xl">{address}</p>
    <a class="md:text-2xl underline" href={addressLink} target="_blank" rel={addressRef}>Ver Ubicaci√≥n</a>
</div>